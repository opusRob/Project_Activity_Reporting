<h1>Listing Organizations</h1>

<%= render \
	partial: "shared/data_panel" \
	, object: @organizations \
	, locals: { \
		data_obj: @organizations \
		, form_for_obj: :organization \
		, label: "Organization" \
		, data_obj_paths: { \
			list_path: organizations_path \
			, new_path: new_organization_path \
		}, data_fields: [ \
			{ \
				field_name: "name" \
			} \
			, { \
				field_name: "is_active", field_format: "YesNo" \
			} \
			, { \
				field_name: "is_deleted", field_format: "YesNo" \
			} \
			, { \
				field_name: "created_at", field_label: "Created Date", field_format: "%m/%d%Y %l:%M:%S %p" \
			} \
			, { \
				field_name: "updated_at", field_label: "Updated Date", field_format: "%m/%d%Y %l:%M:%S %p" \
			} \
			, { \
				field_name: "deleted_at", field_label: "Deleted Date", field_format: "%m/%d%Y %l:%M:%S %p" \
			} \
		] \
	} \
%>


<%
=begin
%>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Is active</th>
      <th>Is deleted</th>
      <th>Deleted at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.is_active %></td>
        <td><%= organization.is_deleted %></td>
        <td><%= organization.deleted_at %></td>
        <td><%= link_to 'Show', organization %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%
=end
%>
<br>

<%= link_to 'New Organization', new_organization_path %>
