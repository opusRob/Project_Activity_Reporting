<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<!-- <span class="first"> -->
<%
=begin
%>
	<%= link_to_unless current_page.first?, t('views.pagination.first').html_safe, url, :remote => remote %>
	<%= link_to_bootstrap_glyphicon_unless current_page.first?, url, "sm", "default", t('views.pagination.first').html_safe, ["fast-backward"], {remote: remote} %>
<%
=end
%>
	<% button_options = {} %>
	<%if current_page.first? %>
		<% button_options[:class] = "btn-disabled" %>
		<% button_options[:disabled] = true %>
	<% else %>
		<% button_options[:onclick] = "location.href='#{url}'; " %>
	<% end %>
	<%= button_tag_bootstrap_glyphicon \
		"button" \
		, "btn_pagination_first_page" \
		, "sm" \
		, "default" \
		, t('views.pagination.first').html_safe \
		, ["fast-backward"] \
		, options = button_options \
	%>
<!-- </span> -->
