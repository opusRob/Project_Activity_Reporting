<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<!-- <span class="next"> -->
<%
=begin
%>
	<%= link_to_unless current_page.last?, t('views.pagination.next').html_safe, url, :rel => 'next', :remote => remote %>
	<%= link_to_bootstrap_glyphicon_unless current_page.last?, url, "sm", "default", t('views.pagination.next').html_safe, ["step-forward"], {remote: remote} %>  
<%
=end
%>
	<% button_options = {} %>
	<%if current_page.last? %>
		<% button_options[:class] = "btn-disabled" %>
		<% button_options[:disabled] = true %>
	<% else %>
		<% button_options[:onclick] = "location.href='#{url}'; " %>
	<% end %>
	<%= button_tag_bootstrap_glyphicon \
		"button" \
		, "btn_pagination_next_page" \
		, "sm" \
		, "default" \
		, t('views.pagination.next').html_safe \
		, ["step-forward"] \
		, options = button_options \
	%>
<!-- </span> -->
